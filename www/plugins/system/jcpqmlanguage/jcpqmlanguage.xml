<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" version="3.8" group="system" method="upgrade">
	<name>PLG_JCPQMLANGUAGE</name>
	<creationDate>19/06/17</creationDate>
	<author>Marco</author>
	<authorEmail>your@email.com</authorEmail>
	<authorUrl>http://your.url.com</authorUrl>
	<copyright>A copyright</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<version>1.1</version>
	<description>PLG_JCPQMLANGUAGE_XML_DESCRIPTION</description>

	<!-- Scripts to run on installation -->
	<scriptfile></scriptfile>

	<!-- Language files -->
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_system_jcpqmlanguage.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_system_jcpqmlanguage.sys.ini</language>
	</languages>

	<!-- Plugin files -->
	<files>
		<filename plugin="jcpqmlanguage">jcpqmlanguage.php</filename>
		<folder>language</folder>
	</files>

	<!-- Config parameter -->
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="active4components"
					type="text"
					default="com_tjlms,com_jcpqm"
					label="PLG_JCPQMLANGUAGE_ACTIVECOMPONENTS_LABEL"
					description="PLG_JCPQMLANGUAGE_ACTIVECOMPONENTS_DESCRIPTION"
				/>
			</fieldset>
		</fields>
	</config>

	<!-- Update servers -->
	<updateservers>
		<server type="extension" priority="1" name="jcpqmlanguage">https://www.example.com/plg_jcpqmlanguage.xml</server>
	</updateservers>
</extension>
